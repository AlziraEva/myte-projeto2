@model Wbs

@{
    ViewData["Title"] = " atualizar WBS ";
}

<form method="post" class="form_criar_wbs">
    <div class="div_inputs">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" placeholder="Nome da WBS" />
        <span></span>
    </div>

    <div class="div_inputs">
        <label asp-for="Codigo"></label>
        <input asp-for="Codigo" placeholder="Entre 4 e 10 caracteres (apenas letras e números)" />
        <span></span>
    </div>

    <div class="div_inputs">
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" placeholder="Descrição da WBS" />
        <span></span>
    </div>


    <div class="div_inputs">
        <label asp-for="DataCriacao"></label>
        <input asp-for="DataCriacao" type="date" />
        <span></span>
    </div>

    <div class="div_tipo">
        <input type="radio" asp-for="Tipo" value="Chargeability">Chargeability
        <input type="radio" asp-for="Tipo" value="Non-Chargeability">Non-Chargeability
        <span></span>
    </div>

    <div class="d-flex justify-content-around gap-2">
        <button type="submit" class="button_form">Cadastrar</button>
        <a asp-controller="Wbs" asp-action="Index" class="btn btn-secondary button_cancelar">Cancelar</a>
    </div>


</form>